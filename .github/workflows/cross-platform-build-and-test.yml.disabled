name: Cross-platform build and test
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  check:
    strategy:
      matrix:
        target:
          # https://nix.dev/guides/faq#how-to-run-non-nix-executables
          # Linux targets
          - x86_64-linux-musl
          # Darwin/macOS targets
          - x86_64-macos
          - aarch64-macos
        # NOTE: disabled aarch64-linux-musl libxev+qemu problem
        include:
          - target: x86_64-linux-musl
            os: ubuntu-24.04
            can_test: true
          - target: x86_64-macos
            os: macos-latest
            can_test: true
          - target: aarch64-macos
            os: macos-latest
            can_test: false  

    runs-on: ${{ matrix.os }}
    permissions:
      id-token: "write"
      contents: "read"

    steps:
      # To avoid a permission error
      - if: matrix.os == 'ubuntu-24.04'
        run: sudo sysctl -w kernel.apparmor_restrict_unprivileged_userns=0

      - uses: actions/checkout@v4
        with:
          submodules: 'recursive'
      
      - uses: DeterminateSystems/nix-installer-action@main
        with:
          extra-conf: "build-use-sandbox = false"
      - uses: DeterminateSystems/flakehub-cache-action@main
      - uses: DeterminateSystems/flake-checker-action@main

      - name: Test Debug ${{ matrix.target }}
        if: ${{ matrix.can_test }}
        run: |
          nix run .#test -- -Dtarget=${{ matrix.target }} -- --progress

      - name: Test ReleaseFast ${{ matrix.target }}
        if: ${{ matrix.can_test }}
        run: |
          nix run .#test -- -Dtarget=${{ matrix.target }} -Doptimize=ReleaseFast -- --progress

      - name: Build only for ${{ matrix.target }}
        if: ${{ !matrix.can_test }}
        run: |
          # Build only
          nix run .#build -- -Dtarget=${{ matrix.target }}
